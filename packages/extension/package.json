{
  "name": "extension",
  "version": "0.0.0",
  "private": true,
  "displayName": "Ordinex",
  "description": "Deterministic, event-driven VS Code extension",
  "publisher": "ordinex",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:ordinex.missionControl"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ordinex",
          "title": "Ordinex",
          "icon": "$(rocket)"
        }
      ]
    },
    "views": {
      "ordinex": [
        {
          "type": "webview",
          "id": "ordinex.missionControl",
          "name": "Mission Control"
        }
      ]
    },
    "commands": [
      {
        "command": "ordinex.openPanel",
        "title": "Ordinex: Open Panel"
      }
    ]
  },
  "scripts": {
    "dev": "pnpm run compile && code --extensionDevelopmentPath=$PWD",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "tsc -p ./",
    "clean": "rm -rf dist",
    "test": "echo 'No tests yet'"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "core": "workspace:*",
    "webview": "workspace:*"
  }
}
