{
  "name": "extension",
  "version": "0.0.0",
  "private": true,
  "displayName": "Ordinex",
  "description": "Deterministic, event-driven VS Code extension",
  "publisher": "ordinex",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:ordinex.missionControl"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ordinex",
          "title": "Ordinex",
          "icon": "$(rocket)"
        }
      ]
    },
    "views": {
      "ordinex": [
        {
          "type": "webview",
          "id": "ordinex.missionControl",
          "name": "Mission Control"
        }
      ]
    },
    "commands": [
      {
        "command": "ordinex.openPanel",
        "title": "Ordinex: Open Panel"
      },
      {
        "command": "ordinex.setApiKey",
        "title": "Ordinex: Set API Key"
      },
      {
        "command": "ordinex.clearApiKey",
        "title": "Ordinex: Clear API Key"
      },
      {
        "command": "ordinex.openSettings",
        "title": "Ordinex: Open Settings",
        "icon": "$(gear)"
      },
      {
        "command": "ordinex.undo",
        "title": "Ordinex: Undo Last Edit"
      },
      {
        "command": "ordinex.focusPanel",
        "title": "Ordinex: Focus Panel"
      },
      {
        "command": "ordinex.focusInput",
        "title": "Ordinex: Focus Prompt Input"
      },
      {
        "command": "ordinex.newChat",
        "title": "Ordinex: New Chat"
      },
      {
        "command": "ordinex.stopExecution",
        "title": "Ordinex: Stop Execution"
      },
      {
        "command": "ordinex.cycleMode",
        "title": "Ordinex: Toggle Mode (Agent / Plan)"
      }
    ],
    "keybindings": [
      {
        "command": "ordinex.undo",
        "key": "shift+cmd+z",
        "mac": "shift+cmd+z",
        "when": "ordinex.hasUndoableEdits"
      },
      {
        "command": "ordinex.focusPanel",
        "key": "shift+cmd+o",
        "mac": "shift+cmd+o"
      },
      {
        "command": "ordinex.focusInput",
        "key": "cmd+l",
        "mac": "cmd+l"
      },
      {
        "command": "ordinex.newChat",
        "key": "shift+cmd+n",
        "mac": "shift+cmd+n"
      },
      {
        "command": "ordinex.stopExecution",
        "key": "escape",
        "mac": "escape",
        "when": "view.ordinex.missionControl.visible && ordinex.isRunning"
      },
      {
        "command": "ordinex.cycleMode",
        "key": "ctrl+.",
        "mac": "cmd+."
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ordinex.openSettings",
          "when": "view == ordinex.missionControl",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Ordinex",
      "properties": {
        "ordinex.commandPolicy.mode": {
          "type": "string",
          "enum": [
            "off",
            "prompt",
            "auto"
          ],
          "default": "prompt",
          "description": "Controls how terminal commands are executed. off = never, prompt = ask first (default), auto = run without asking."
        },
        "ordinex.autonomy.level": {
          "type": "string",
          "enum": [
            "conservative",
            "balanced",
            "aggressive"
          ],
          "default": "conservative",
          "description": "Controls AI autonomy level during mission execution. conservative = confirm every step (default), balanced = confirm risky steps, aggressive = minimal confirmations."
        },
        "ordinex.intelligence.sessionPersistence": {
          "type": "string",
          "enum": [
            "off",
            "on"
          ],
          "default": "off",
          "description": "When on, session context is persisted to disk and restored across VS Code restarts."
        }
      }
    }
  },
  "scripts": {
    "dev": "pnpm run compile && code --extensionDevelopmentPath=$PWD",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "tsc -p ./",
    "clean": "rm -rf dist",
    "test": "vitest run"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "core": "workspace:*",
    "webview": "workspace:*"
  }
}
